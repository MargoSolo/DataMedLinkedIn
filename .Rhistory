# Создание базы данных
drug_data <- data.frame(
Patient_ID = c("Patient 1", "Patient 2", "Patient 3", "Patient 4", "Patient 5"),
Drug_A = c(1, 1, 0, 1, 0),
Drug_B = c(0, 1, 1, 0, 1),
Drug_C = c(0, 0, 1, 0, 0)
)
ggplot(data = drug_data) +
geom_parallel_sets(
aes(x = Drug_A, y = Drug_B, z = Drug_C, alpha = Patient_ID),
alpha_min = 0.5,
axis_width = 0.25,
axis_gap = 0.05,
fill = c("#E69F00", "#56B4E9", "#009E73"),
edge_width = 0.1
) +
scale_alpha_discrete(range = c(0.6, 1)) +
labs(x = "Drug A", y = "Drug B", z = "Drug C")
